<% include header.ejs %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Page Modification fiche
        <small>Optional description <%= fiche.length %></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Your Page Content Here -->
      <div class="box">
        <div class="row" style="margin:100px 10px 0px 10px;border:1px solid #D8D8D8;padding:30px;">
<div class="col-md-10 ">
<form class="form-horizontal"  method='post' action=''>



 

<div class="form-group">
    <label for="DateSortie">Date de sortie</label>
    <div class="input-group date">
      <div class="input-group-addon">
           <i class="fa fa-calendar"></i>
      </div>
      <input type="text" class="form-control pull-right" id="datefiche" placeholder="Date de sortie"  value='<%=fiche.datefiche%>'>
    </div>
</div>


<div class="form-group">
      <label for="nbrbarquesactif">Nombre de barques actives</label>
      <input type="Number" class="form-control" id="nbrbarquesactif" placeholder="Nombre de barques actives" value='<%=fiche.nbrbarquesactif%>'>
</div>

<div class="form-group">
                <label>Site</label>
    <select class="form-control select2" style="width: 100%;" id="site" name="site">

                  <option>Lassarga</option>
                  <option>Labuirda</option>
                  <option>Lekraa</option>
                  <option>Marchika</option>
    </select>
</div>

<div class="form-group">
                <label>Engin</label>
    <select class="form-control select2" multiple="multiple" style="width: 100%;" id="engin" name="engin">

                  <option value="Engin 1">Engin 1</option>
                  <option value="Engin 2">Engin 2</option>
                  <option value="Engin 3">Engin 3</option>
                  <option value="Engin 4">Engin 4</option>
    </select>
</div>

<div class="form-group">
      <label for="NoteurName">Noteur</label>
      <input type="text" class="form-control" id="noteur" placeholder="Nom du noteur" value='<%=fiche.noteur %>'>
</div>

<div class="form-group">
      <label for="EchantillonneurName">Echantillonneur</label>
      <input type="text" class="form-control" id="echantillonneur" placeholder="Nom Echantillonneur" value='<%=fiche.echantillonneur %>'>
</div>






<div class="form-group">
<div class="col-sm-offset-2 col-sm-10">
<button type="submit" class="btn btn-success">Enregistrer</button>&nbsp;&nbsp;&nbsp;
</div>

</div>


</form>
<button class="btn btn-success" onclick="window.location.href='/listfichespoulpe'">Back to List</button>

</div>
</div>

      </div>

    </section>
    <!-- /.content -->


  <% include footer.ejs %>

  <script type="text/javascript">
  function selectItemByValuemultiple(elmnt, value){
    var values=value;
    $.each(values.split(","), function(i,e){
      console.log(e);
        $("#engin option[value='" + e + "']").prop("selected", true);
    });
  }



  function selectItemByValue(elmnt, value){

      for(var i=0; i < elmnt.options.length; i++)
      {
        if(elmnt.options[i].value == value)
          elmnt.selectedIndex = i;
      }
    }

    selectItemByValue(document.getElementById('site'), '<%= fiche.site %>');
    selectItemByValuemultiple(document.getElementById('engin'), '<%= fiche.engin %>');



  </script>
